<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="fr.openjava.gestionbibliothequejavafx.controllers.BibliothequeController">
    <MenuBar>
        <menus>
            <Menu text="Fichier">
                <items>
                    <MenuItem text="Ouvrir"/>
                    <MenuItem text="Quitter"/>
                </items>
            </Menu>
            <Menu text="Edition">
                <items>
                    <MenuItem text="Sauvegarder"/>
                    <MenuItem text="Sauvegarder sous"/>
                </items>
            </Menu>
            <Menu text="About">
                <items>
                    <MenuItem text="Infos"/>
                </items>
            </Menu>
        </menus>
    </MenuBar>

    <TableView fx:id="tableView">
        <columns>
            <TableColumn text="Titre"/>
            <TableColumn text="Auteur"/>
            <TableColumn text="Présentation"/>
            <TableColumn text="Parution"/>
            <TableColumn text="Colonne"/>
            <TableColumn text="Rangée"/>
        </columns>
    </TableView>

    <HBox alignment="CENTER" spacing="20">
        <Button text="Ajouter"/>
        <Button text="Supprimer"/>
        <Button text="Editer"/>
    </HBox>
</VBox>
